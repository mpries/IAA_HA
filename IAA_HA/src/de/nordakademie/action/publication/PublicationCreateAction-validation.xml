<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE validators PUBLIC

  "-//Apache Struts//XWork Validator 1.0.3//EN"

  "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<field name="publication.title">
		<field-validator type="requiredstring">
			<message>Title is required</message>
		</field-validator>
	</field>
	<field name="publication.releaseDate">
		<field-validator type="required">
			<message>Release Date is required</message>
		</field-validator>
	</field>
	<field name="publication.publisher.name">
		<field-validator type="requiredstring">
			<message>Publisher is required</message>
		</field-validator>
	</field>
	<field name="publication.ISBN">
		<field-validator type="requiredstring">
			<param name="max">13</param>
			<message>ISBN is required</message>
		</field-validator>
	</field>
</validators>
