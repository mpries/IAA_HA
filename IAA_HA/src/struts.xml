<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">


<struts>

	<!-- Actions -->
	<package name="login" extends="struts-default">
		<interceptors>
			<interceptor name="loginValidation"
				class="de.nordakademie.interceptor.LoginValidationInterceptor"></interceptor>
		</interceptors>

		<action name="loginAction" class="de.nordakademie.action.LoginAction">
			<interceptor-ref name="loginValidation" />
			<interceptor-ref name="defaultStack"/>
			<result name="success">/login.jsp</result>
			<result name="input">/loginError.jsp</result>
		</action>
	</package>


</struts>

